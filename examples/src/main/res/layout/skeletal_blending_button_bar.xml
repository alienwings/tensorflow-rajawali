<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:gravity="bottom"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skeletal_animation_blending_button_idle"
        tools:ignore="ButtonStyle"/>

    <Button
        tools:ignore="ButtonStyle"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skeletal_animation_blending_button_walk"/>

    <Button
        tools:ignore="ButtonStyle"
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skeletal_animation_blending_button_arm_stretch"/>

    <Button
        tools:ignore="ButtonStyle"
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skeletal_animation_blending_button_bend"/>

</LinearLayout>